{
    "compilerOptions": {
      "outDir": "dist",
      "module": "NodeNext",
      "lib": ["ES2022"],

      /* Base Options */
      "target": "es2022",
      "esModuleInterop": true,
      "skipLibCheck" :  true ,
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      
      /* Strictness */
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitOverride": true,
      
    },
    "include": ["src/**/*"],
}
